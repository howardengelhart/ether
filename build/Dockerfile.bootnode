FROM golang:1.9-alpine as base
ARG GETH_VERSION=master

WORKDIR /build
RUN apk add --no-cache make gcc musl-dev linux-headers git && \
    git clone -b $GETH_VERSION https://github.com/ethereum/go-ethereum.git && \
    cd go-ethereum && make all

FROM alpine:latest

RUN apk add --no-cache ca-certificates
COPY --from=base /build/go-ethereum/build/bin/bootnode /usr/local/bin/

EXPOSE 30301 30301/udp
ENTRYPOINT ["bootnode"]

